# Rules.mak for NullLogic Groupware executables
CC            = gcc
MAKE          = make

BIN_CFLAGS    = -Wall -O2 -DFREEBSD -I../include
BIN_LDFLAGS   = -s
BIN_LDFLAGS_T = -s -pthread
BIN_TARGETDIR = ../distrib/bin

SRVMOD_CFLAGS    = -Wall -O2 -DFREEBSD -fPIC -I../../include
SRVMOD_LDFLAGS   = -s -shared
SRVMOD_TARGETDIR = ../../distrib/lib

MOD_CFLAGS    = -Wall -O2 -DFREEBSD -fPIC -I../../include
MOD_LDFLAGS   = -s -shared
MOD_TARGETDIR = ../../distrib/lib
