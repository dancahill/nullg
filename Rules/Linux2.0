# Rules.mak for NullLogic Groupware executables (Linux 2.0)
CC            = gcc
MAKE          = make -s

BIN_CFLAGS    = -Wall -O2 -DOLDLINUX -I../include
BIN_LDFLAGS   = -s -ldl
BIN_LDFLAGS_T = -s -ldl -lpthread
BIN_TARGETDIR = ../distrib/bin

MOD_CFLAGS    = -Wall -O2 -DOLDLINUX -fPIC -I../../include
MOD_LDFLAGS   = -s -shared
MOD_TARGETDIR = ../../distrib/lib

.c.o:
	@echo "  CC $@" ; $(CC) $(CFLAGS) -c $< -o $@
