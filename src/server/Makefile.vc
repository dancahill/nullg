# Makefile for NullLogic GroupServer Core

OBJDIR  = ../../obj
INTDIR  = $(OBJDIR)/server

include ../Rules.mak.vc

CFLAGS  = $(BIN_CFLAGS)
OBJECTS = $(INTDIR)/config.obj $(INTDIR)/domains.obj $(INTDIR)/format.obj $(INTDIR)/language.obj $(INTDIR)/main.obj $(INTDIR)/modctl.obj $(INTDIR)/sanity.obj $(INTDIR)/server.obj $(INTDIR)/sql.obj $(INTDIR)/ssl.obj $(INTDIR)/tcp.obj
TARGET  = $(BIN_TARGETDIR)/nullgsd.exe

all: _dirs _nullgsd

_dirs:
	@if not exist "$(BIN_TARGETDIR)" mkdir "$(BIN_TARGETDIR)"
	@if not exist "$(OBJDIR)" mkdir "$(OBJDIR)"
	@if not exist "$(INTDIR)" mkdir "$(INTDIR)"

_nullgsd: $(OBJECTS)
	$(LINK) $(BIN_LDFLAGS) /out:$(TARGET) $(OBJECTS)

clean:
	@-erase "$(TARGET)"
	@-erase "$(INTDIR)/*"
