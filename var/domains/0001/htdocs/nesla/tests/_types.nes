#!/usr/bin/nesla
if (typeof(expect)!='function') include("_expect.nes");
function testtypes() {
	local a=null;
	local b=true;
	local c=42;
	local d="Guinness";
	local e = { a=1, b=2, c=3 };

	expect("typeof(a)", "(null)null",       "("+typeof(a)+")"+tostring(a));
	expect("sizeof(a)", 0,                  sizeof(a));
	expect("typeof(b)", "(boolean)true",    "("+typeof(b)+")"+tostring(b));
	expect("sizeof(b)", 1,                  sizeof(b));
	expect("typeof(c)", "(number)42",       "("+typeof(c)+")"+tostring(c));
	expect("sizeof(c)", 1,                  sizeof(c));
	expect("typeof(d)", "(string)Guinness", "("+typeof(d)+")"+tostring(d));
	expect("sizeof(d)", 8,                  sizeof(d));
	expect("typeof(e)", "(table)",          "("+typeof(e)+")"+tostring(e));
	expect("sizeof(e)", 3,                  sizeof(e));
	return;
}
testtypes();
global testtypes=null;
