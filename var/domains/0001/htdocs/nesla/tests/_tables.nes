#!/usr/bin/nesla
if (typeof(expect)!='function') include("_expect.nes");
function testtables() {
	function subf() { return 69; }
	local x=1;
	local ack = { a="x" };

	expect("typeof(CARDS)",      "table",           typeof(CARDS));
	if (typeof(CARDS)!='table') return;
	expect("CARDS['1']['name']", "Ace of Diamonds", CARDS['1']['name']);
	CARDS[1].name="aa";
	expect("CARDS[1].name", "aa", CARDS[1].name);
	expect("CARDS[x]['dealt']", "(null)null", "("+typeof(CARDS[x]['dealt'])+")"+tostring(CARDS[x]['dealt']));
	CARDS[x]['dealt']=true;
	expect("CARDS[x]['dealt']", "(boolean)true", "("+typeof(CARDS[x]['dealt'])+")"+tostring(CARDS[x]['dealt']));

	tab = {
		{ a1="x", b = pi, [12]=41, [1]=42, 43, 'blah', subf() },
		{ "x", 'y', x = 41, 42, 43, 'blah', [5]=12, heh=";-)" }
	};
	# now add a subtable
	tab['t'] = {
		{ a2="x", b = pi, [12]=41, [1]=42, 43, 'blah', subf() },
		{ "x", 'y', x = 41, 42, 43, 'blah', [5]=12, heh=";-)" }
	};
	# overwrite an existing subtable
	tab['t'] = { [2] = { "x", 'y', x = 41, 42, 43, 'blah', [5]=12, heh=";-)" } };
	# add another sub
	tab['t'][3] = { "x", 'y', x = 41, 42, 43, 'blah', [5]=12, heh=";-)" };
	#printvar(_GLOBALS);

	a = { [0]=subf()-1, [1]=subf(), x=+1, y=2, z=-3 };
	expect("a = { ... }", "68 69 1 2 -3", tostring(a[0])+' '+tostring(a[1])+' '+tostring(a['x'])+' '+tostring(a['y'])+' '+tostring(a['z']));

	return;
}
testtables();
